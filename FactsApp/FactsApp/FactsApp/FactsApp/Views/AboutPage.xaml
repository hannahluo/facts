<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FactsApp.Views.AboutPage"
             xmlns:vm="clr-namespace:FactsApp.ViewModels"
             Title="{Binding Title}">
    <StackLayout Margin="20">
        <Label TextColor="{Binding FlexionAngleColor}"
               FontSize="30"
               HorizontalOptions="Center">
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="Flexion Angle: " />
                    <Span Text="{Binding FlexionAngleValue}" />
                </FormattedString>
            </Label.FormattedText>
        </Label>
        <Polyline Points="{Binding DataPoints}"
                  Stroke="Black" 
                  StrokeThickness="10"
                  StrokeLineJoin="Round"/>
    </StackLayout>

    
</ContentPage>
